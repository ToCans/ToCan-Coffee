<MyLayout>
    canvas.before:
        Color:
            rgba: (244/255,234/255,208/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Total Time"
            background_normal: ''
            background_color: (208/255,176/255,132/255,1)
            font_size: 30
            pos_hint: {"x":0.35,"top":0.99}
            size_hint: (0.3,0.1)
            #border: (5,5,5,5)
            #width: 200
            #height: 50

        Button:
            text: "Begin"
            background_normal: ''
            background_color: (79/255,188/255,105/255,1)
            font_size: 30
            pos_hint: {"x":0.25, "y":0.01}
            size_hint: (0.25,0.1)
            #width: 200
            #height: 50

        Button:
            text: "Pause"
            background_normal: ''
            background_color: (188/255,86/255,79/255,1)
            font_size: 30
            pos_hint: {"x":0.5, "y":0.01}
            size_hint: (0.25,0.1)
            #width: 200
            #height: 50

        

        